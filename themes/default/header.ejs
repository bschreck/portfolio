<div class='header'>
  <div class='profile'>
    <a class='portrait' href='/'><img src='/portrait.jpg' /></a>
    <div class="text">
      <div class='name'>
        <a href='/'><%= name %></a>
      </div>
      <div class='bio'>
        <%= bio %>
      </div>
      <div class='links-container'>
        <ul class='links'>
          <%_ links.forEach(function(link, i, arr){ -%>
            <li class='links'>
            <% if (link.type == "symbol") { %>
                  <a class='icon' target='_blank' href='<%= link.url %>' title='<%= name %>'>
                    <span class='symbol'><%- link.symbol %></span>
                    <span class='symbol name'><%-link.name%></span>
                  </a>
            <% } else {if (link.type == "html") { %>
              <%- link.html %>
            <% } else {if (link.type == "image") { %>
              <a class='icon' title='<%= name %>' href="<%- link.url %>">
                <span class='symbol'><img src="<%- link.image %>" height="16px" />
                </span>
                <span class='symbol name'><%-link.name%></span>
              </a>
            <% }}} %>
            </li>
          <%_ }); -%>
        </ul>
      </div>
    </div>
  </div>
  <nav class='navigation'>
    <ul class='tabs' id='tabs'>
      <%_ pages.forEach(function(page, i, arr){ -%>
        <li class='tab'>
          <a <% if (page.active){ %>class='active'<% }; %> href='<%= page.url %>'><%= page.name -%></a>
         </li>
      <%_ }); -%>
    </ul>
  </nav>
</div>
